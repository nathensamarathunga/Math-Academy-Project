<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalScore"
    android:background="#B38DE4">

    <ImageView
        android:id="@+id/backgroundImageView_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:scaleType="centerCrop"
        android:src="@drawable/backdrop_achievements" />

    <TextView
        android:id="@+id/well_done_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="252dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="252dp"
        android:fontFamily="@font/mochiy"
        android:text="WELL DONE!"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/backgroundImageView_2"
        app:layout_constraintStart_toStartOf="@+id/backgroundImageView_2"
        app:layout_constraintTop_toTopOf="@+id/backgroundImageView_2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="409dp"
        android:layout_height="256dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="81dp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundImageView_2"
        app:layout_constraintEnd_toEndOf="@+id/backgroundImageView_2"
        app:layout_constraintStart_toStartOf="@+id/backgroundImageView_2"
        app:layout_constraintTop_toTopOf="@+id/backgroundImageView_2"
        app:srcCompat="@mipmap/score_background_2_foreground" />

    <TextView
        android:id="@+id/score_text_show_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="140dp"
        android:fontFamily="@font/mochiy"
        android:text="SCORE"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/score_count_final_score"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/score_count_final_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="171dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="62dp"
        android:fontFamily="@font/mochiy"
        android:text="100"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2" />

</androidx.constraintlayout.widget.ConstraintLayout>